{
    "name": "donkey-i18n",
    "version": "1.0.0",
    "description": "A typesafe, dead-simple, easily swappable i18n library for prototyping in Typescript, with support for React.",
    "keywords": [
        "typescript",
        "i18n",
        "react"
    ],
    "homepage": "https://github.com/matthewyingtao/donkey-i18n",
    "bugs": {
        "url": "https://github.com/matthewyingtao/donkey-i18n/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/matthewyingtao/donkey-i18n.git"
    },
    "license": "MIT",
    "author": "Matthew Tao <matthew.yingtao@gmail.com> (matthewtao.com)",
    "type": "module",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
        "check-format": "prettier --check .",
        "ci": "pnpm build && pnpm check-format && pnpm check-exports && npm run test",
        "format": "prettier --write .",
        "local-release": "changeset version && changeset publish",
        "prepublishOnly": "npm run ci",
        "test": "vitest run"
    },
    "dependencies": {
        "react": "^19.1.0"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.17.4",
        "@changesets/cli": "^2.29.2",
        "@testing-library/react": "^16.3.0",
        "@types/react": "^19.1.2",
        "jsdom": "^26.1.0",
        "jsdom-global": "^3.0.2",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "vitest": "^3.1.2"
    },
    "packageManager": "pnpm@10.9.0"
}
